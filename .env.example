# ================================
# üåç Environment Configuration
# ================================
ENVIRONMENT=development   # change to "production" in prod
DEBUG=true
APP_NAME="YouTube Optimizer"

# ================================
# üîó URLs
# ================================
# Development
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8080
EXTERNAL_HOME_URL=http://localhost:3000

# Production (uncomment & configure for deployment)
# FRONTEND_URL=https://your-frontend-domain.com
# BACKEND_URL=https://your-backend-domain.com
# EXTERNAL_HOME_URL=https://your-external-home.com

# ================================
# üóÑÔ∏è Database Configuration
# ================================
DATABASE_URL=postgresql://<POSTGRES_USER>:<POSTGRES_PASSWORD>@localhost:5432/<POSTGRES_DB>
POSTGRES_USER=<YOUR_DB_USER>
POSTGRES_PASSWORD=<YOUR_DB_PASSWORD>
POSTGRES_DB=<YOUR_DB_NAME>

# ================================
# üîë API Keys
# ================================
ANTHROPIC_API_KEY=your_anthropic_api_key
SERPAPI_API_KEY=your_serpapi_api_key
SIEVE_API_KEY=your_sieve_api_key
GOOGLE_API_KEY=your_google_api_key
OPENAI_API_KEY=your_openai_api_key

# ================================
# üîí Security & Sessions
# ================================
SESSION_SECRET=your_session_secret
CLOUD_SCHEDULER_SECRET=your_cloud_scheduler_secret

# ================================
# üîê Google OAuth
# ================================
GOOGLE_APPLICATION_CREDENTIALS=your_google_credentials.json
CLIENT_SECRET_FILE=your_client_secret.json
REDIRECT_URL=https://your-app-domain.com/auth/callback

# ================================
# üîê Stripe
# ================================
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
